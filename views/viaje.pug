extends ./layout/index

block contenido
    main.container.mt-5
        .row
            .col-md-5
                img(src=`/img/destinos_${viaje.imagen}_ln.jpg`, alt="" class="img-fluid")
            .col-md-7
                h1 #{viaje.titulo}
                svg.icon.icon-tabler.icon-tabler-calendar-stats(xmlns='http://www.w3.org/2000/svg' width='44' height='44' viewbox='0 0 24 24' stroke-width='1.5' stroke='#dc135f' fill='none' stroke-linecap='round' stroke-linejoin='round')
                    path(stroke='none' d='M0 0h24v24H0z' fill='none')
                    path(d='M11.795 21h-6.795a2 2 0 0 1 -2 -2v-12a2 2 0 0 1 2 -2h12a2 2 0 0 1 2 2v4')
                    path(d='M18 14v4h4')
                    circle(cx='18' cy='18' r='4')
                    path(d='M15 3v4')
                    path(d='M7 3v4')
                    path(d='M3 11h16')
                | #{viaje.fechaIda} - #{viaje.fechaVuelta}
                p 
                    svg.icon.icon-tabler.icon-tabler-user-circle(xmlns='http://www.w3.org/2000/svg' width='44' height='44' viewbox='0 0 24 24' stroke-width='1.5' stroke='#dc135f' fill='none' stroke-linecap='round' stroke-linejoin='round')
                        path(stroke='none' d='M0 0h24v24H0z' fill='none')
                        circle(cx='12' cy='12' r='9')
                        circle(cx='12' cy='10' r='3')
                        path(d='M6.168 18.849a4 4 0 0 1 3.832 -2.849h4a4 4 0 0 1 3.834 2.855')
                    | #{viaje.disponible} Boletos disponibles
                    
                p
                    svg.icon.icon-tabler.icon-tabler-coin(xmlns='http://www.w3.org/2000/svg' width='44' height='44' viewbox='0 0 24 24' stroke-width='1.5' stroke='#dc135f' fill='none' stroke-linecap='round' stroke-linejoin='round')
                        path(stroke='none' d='M0 0h24v24H0z' fill='none')
                        circle(cx='12' cy='12' r='9')
                        path(d='M14.8 9a2 2 0 0 0 -1.8 -1h-2a2 2 0 0 0 0 4h2a2 2 0 0 1 0 4h-2a2 2 0 0 1 -1.8 -1')
                        path(d='M12 6v2m0 8v2')
                    | $ #{viaje.precio}

                p
                    | #{viaje.descripcion}
                            
                    a(href=`/viajes/${viaje.slug}`, class= "btn btn-success btn-block " ) Mas informacion